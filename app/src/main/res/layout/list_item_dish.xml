<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
        android:id="@+id/list_item_dish_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:padding="4dp"
        tools:text="30 â‚¬"/>

    <ImageView
        android:id="@+id/list_item_dish_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:src="@drawable/placeholder_image"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:id="@+id/list_item_dish_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/list_item_dish_image"
        android:textStyle="bold"
        android:padding="4dp"
        tools:text="Dish Name"
        android:src="@drawable/placeholder_image"/>

    <TextView
        android:id="@+id/list_item_dish_allergens"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/list_item_dish_image"
        android:layout_below="@+id/list_item_dish_name"
        android:padding="4dp"
        tools:text="Dish allergens"/>



</RelativeLayout>